<nav style ="display:flex; gap: 10px">
    <p><%= link_to 'Home', root_path(), method: :get %></p> 
    <p>|</p>
    <p><%= link_to 'About ', about_path(@articles), method: :get%></p> 
</nav>

<h1>Articles</h1>
<table>
    <thead>
        <tr>
            <th colspan="2">Title</th>
            <th>Description</th>
            <th  colspan="3">Actions</th>
        </tr>
    </thead>

    <% @articles.each do |article| %>
            <tbody>
                
                <td><%= article.title %></td>
                <td>By <%= article.user.username %></td>
                <td><%= article.description %></td>

                <%# connecting the all the funcitonality to the frontend: %>
                <td><%= button_to 'view', article_path(article), method: :get %></td>
                <td><%= button_to 'Edit', edit_article_path(article), method: :get%></td>
                <td><%= button_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure you want to delete this article?"} %></td>
            </tbody>
    <% end %>
    
</table>

<%# we'll need an instance variable here because were not within a loop like above %>
<p><%= button_to 'Add New Article', new_article_path(@article), method: :get%></p>

