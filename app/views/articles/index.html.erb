<h1>Articles</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th  colspan="3">Actions</th>
        </tr>
    </thead>

    <% @articles.each do |article| %>
            <tbody>
                <td><%= article.title %></td>
                <td><%= article.description %></td>
                <%# connecting the all the funcitonality to the frontend: %>
                <td><%= button_to 'view', article_path(article), method: :get %></td>
                <td><%= button_to 'Edit', edit_article_path(article), method: :get%></td>
                <td><%= button_to 'Delete', article_path(article), method: :delete %></td>
            </tbody>
    <% end %>
    
</table>
<p><%= button_to 'Add New Article', new_article_path(@article), method: :get%></p>
